{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        // "object-shorthand": ["error", "always"],
        "no-console": 0,
        "eqeqeq": 2
    },
    "parserOptions": {
        "sourceType": "module"
    }
}